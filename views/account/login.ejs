<h1><%= title %></h1>
<%- messages() %>

<% if (errors) { %>
  <% errors.array().forEach(error => { %>
    <p class="alert-error"><%= error.msg %></p>
  <% }) %>
<% } %>

  

<div class="login-form-container">
  
  <form id="loginForm" action="/account/login" method="post">
    <label for="account_email">Email Address:</label>
    <input type="email" id="account_email" name="account_email" required>
    <label for="password">Password:</label>
    <small>Password must be at least 12 characters long, contain at least 1 capital letter, 1 number, and 1 special character.</small>
    <input type="password" id="password" name="account_password" required pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$">
    <button type="submit">Login</button>
  </form>
  
  <p>Don't have an account? <a href="/account/register">Register here</a></p>
</div>
