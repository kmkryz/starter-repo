<h1>Edit Inventory Item</h1>
<p>Modify the details of the vehicle below and click "Update Vehicle" to save changes.</p>

<%- messages() %>

<form id="updateForm" action="/inv/update" method="post">
  <label for="classification_id">Classification:</label>
  <select id="classification_id" name="classification_id">
    <%- classificationSelect %>
  </select>

  <label for="inv_make">Make:</label>
  <input type="text" id="inv_make" name="inv_make" value="<%= inv_make %>">

  <label for="inv_model">Model:</label>
  <input type="text" id="inv_model" name="inv_model" value="<%= inv_model %>">

  <label for="inv_year">Year:</label>
  <input type="text" id="inv_year" name="inv_year" value="<%= inv_year %>">

  <label for="inv_description">Description:</label>
  <textarea id="inv_description" name="inv_description"><%= inv_description %></textarea>

  <label for="inv_image">Image Path:</label>
  <input type="text" id="inv_image" name="inv_image" value="<%= inv_image %>">

  <label for="inv_thumbnail">Thumbnail Path:</label>
  <input type="text" id="inv_thumbnail" name="inv_thumbnail" value="<%= inv_thumbnail %>">

  <label for="inv_price">Price:</label>
  <input type="text" id="inv_price" name="inv_price" value="<%= inv_price %>">

  <label for="inv_miles">Miles:</label>
  <input type="text" id="inv_miles" name="inv_miles" value="<%= inv_miles %>">

  <label for="inv_color">Color:</label>
  <input type="text" id="inv_color" name="inv_color" value="<%= inv_color %>">

  <!-- Hidden input for inv_id -->
  <input type="hidden" name="inv_id" <% if(locals.inv_id) { %> value="<%= locals.inv_id %>" <% } %>>

  <button type="submit" disabled>Update Vehicle</button>
</form>

<script src="/js/inv-update.js"></script>
